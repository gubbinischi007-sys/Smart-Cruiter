{
  "name": "smart-cruiter",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm install && npx tsc",
    "build:client": "cd client && npm install && npm run build",
    "start": "cd server && npm start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6",
    "nodemailer": "^6.9.7",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "date-fns": "^2.30.0",
    "typescript": "^5.3.3",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7"
  }
}